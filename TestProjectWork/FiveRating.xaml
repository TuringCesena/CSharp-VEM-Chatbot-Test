<UserControl x:Class="TestProjectWork.FiveRating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestProjectWork"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="lblHeader" HorizontalAlignment="Center">Ciao</Label>
        <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button x:Name="btn1" Click="btn1_Click">1</Button>
        <Button x:Name="btn2" Grid.Column="1" IsEnabled="False" Click="btn2_Click">2</Button>
        <Button x:Name="btn3" Grid.Column="2" Click="btn3_Click">3</Button>
        <Button x:Name="btn4" Grid.Column="3" Click="btn4_Click">4</Button>
        <Button x:Name="btn5" Grid.Column="4" Click="btn5_Click">5</Button>
        </Grid>
    </Grid>
</UserControl>
